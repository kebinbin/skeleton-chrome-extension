{
  "manifest_version": 3,
  "name": "Skeleton Layout",
  "description": "Add layout skeleton to any page",
  "version": "0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["skeleton.js"],
      "css": ["skeleton.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
